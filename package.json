{
  "name": "anime-dl",
  "version": "1.0.0",
  "description": "Automatic anime torrentor",
  "author": "Neil Mehra",
  "main": "main.js",
  "repository": "https://github.com/AsianKoala/anime-dl",
  "license": "MIT",
  "scripts": {
    "start": "electron .",
    "build": "run-os",
    "build:win32": "electron-builder --win",
    "build:darwin": "electron-builder --mac",
    "clean": "rimraf ./dist",
    "release": "electron-builder --publish always",
    "test": "echo success"
  },
  "build": {
    "appId": "neilmehra.anime-dl",
    "productName": "anime-dl",
    "copyright": "MIT",
    "files": [
      "**/*",
      "build/Release/*",
      "assets/icons/*.*",
      "assets/icons/mac/*.*",
      "assets/icons/png/*.*",
      "assets/icons/win/*.*"
    ],
    "mac": {
      "category": "public.build.automation",
      "icon": "assets/icons/win/icon.ico"
    },
    "dmg": {
      "contents": [
        {
          "x": 110,
          "y": 150
        },
        {
          "x": 440,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        }
      ],
      "artifactName": "electron-travis-${version}.${ext}"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable"
        }
      ],
      "icon": "assets/icons/win/icon.ico"
    },
    "nsis": {
      "runAfterFinish": true,
      "installerIcon": "assets/icons/win/icon.ico",
      "artifactName": "electron-travis-${version}.${ext}"
    },
    "portable": {
      "artifactName": "electron-travis.exe"
    },
    "appx": {
      "applicationId": "electron.travis",
      "backgroundColor": "#464646",
      "identityName": "electron.travis",
      "publisherDisplayName": "joeireland",
      "artifactName": "electron-travis-${version}.${ext}"
    },
    "publish": [
      {
        "provider": "github",
        "releaseType": "release"
      }
    ]
  },
  "devDependencies": {
    "electron": "^13.1.7",
    "electron-builder": "^22.11.7",
    "electron-is-dev": "^2.0.0",
    "rimraf": "^3.0.2",
    "run-script-os-fix": "^1.0.4"
  },
  "dependencies": {
    "axios": "^0.21.1"
  }
}
